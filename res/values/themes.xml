<resources>

    <!-- Unused -->
    <style name="Theme" parent="android:Theme.NoTitleBar"></style>

    <!-- The base theme for Holo.Light, Holo.Dark, or any subclasses -->
    <style name="Theme.HoloBootstrap"></style>

    <!-- Tries to mimick the android.Holo.Light them -->
    <style name="Theme.HoloBootstrap.Light"></style>
    <!-- Tries to mimick the android.Holo.Dark them -->
    <style name="Theme.HoloBootstrap.Dark">

        <!-- DEFAULT WIDGETS -->


        <!-- MONTH VIEW -->
        <!-- NAV -->
        <item name="monthViewNavButton">@drawable/btn_default_holo_dark</item>
        <item name="monthViewNavBackground">@color/background_default</item>
        <item name="monthViewNavDrawableRight">@drawable/ic_action_arrow_right</item>
        <item name="monthViewNavDrawableLeft">@drawable/ic_action_arrow_left</item>
        <item name="monthViewNavTextStyle">@style/FontText</item>
        <!-- CALENDAR HEADER -->
        <item name="monthViewCalHeaderText">@style/FontText.CalHeader</item>
        <!-- CALENDAR -->
        <item name="monthViewCalBackground">@color/background_default</item>

        <!-- CLEARABLE FONT EDIT -->
        <item name="clearableEditBackground">?fontEditBackground</item>
        <item name="clearableClearIcon">@drawable/btn_x_holo_dark</item>
        <item name="clearableClearIconSize">@dimen/clearIconSize</item>

        <!-- FONT EDIT -->
        <item name="fontEditStyle">@style/FontEdit</item>
        <item name="fontEditBackground">@drawable/edit_text_holo_dark</item>

        <!-- ACTIONBAR ACTIVITY -->
        <item name="bgActionBarActivityFrame">@color/background_default</item>

        <!-- ACTIONBAR VIEW -->
        <item name="actionBarBg">@drawable/bg_actionbar</item>
        <item name="actionBarTitleTextStyle">@style/FontText.ActionBarTitle</item>
        <item name="actionBarOverflowIcon">@drawable/ic_action_overflow</item>
        <item name="actionBarOverflowBg">@drawable/bg_actionbar</item>
        <item name="actionBarOverflowInAnim">@anim/scale_in</item>
        <item name="actionBarOverflowOutAnim">@anim/scale_out</item>
        <item name="actionBarUpIcon">@drawable/ic_actionup_back</item>

        <!-- ACTIONBAR BUTTON -->
        <item name="actionBarButtonBg">@drawable/btn_actionbar</item>
        <item name="actionBarButtonIconStyle">@style/IconView.ActionBar</item>

        <!-- ACTIONBAR OVERFLOW -->
        <item name="overflowMenuWidth">@dimen/overflow_menu_width</item>
        <item name="overflowMenuBg">@drawable/bg_actionbar_overflow</item>
        <item name="overflowMenuButtonBg">@drawable/btn_actionbar_overflow</item>
        <item name="overflowMenuButtonIconStyle">@style/IconView.ActionBar.Overflow</item>
        <item name="overflowMenuButtonTextStyle">@style/FontText.ActionBarOverflow</item>

        <!-- OVERFLOW MENU -->
        <item name="overflowMenuTextResId">@id/overflow_menu_text</item>
        <item name="overflowMenuImageResId">@id/overflow_menu_icon</item>
        <item name="overflowMenuLayoutResId">@layout/vw_overflow_item</item>
        <item name="overflowMenuTextStyle">@style/FontText.OverflowMenu</item>
        <item name="overflowMenuLayoutBackground">@drawable/bg_actionbar_overflow</item>

        <!-- SUBTITLE -->
        <item name="subtitleTextStyle">@style/FontText.Subtitle</item>
    </style>

</resources>