<resources xmlns:holo="http://schemas.android.com/apk/res/com.airlocksoftware.holo" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- FONT TEXT -->
    <style name="FontText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="font">roboto_rg</item>
    </style>

    <style name="FontText.DialogTitle">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FontText.DialogTitle.HoloDark">
        <item name="android:textColor">@color/bright_accent</item>
    </style>

    <style name="FontText.OverflowMenu">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="FontText.ActionBarButton">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/gray_90</item>
        <item name="android:textSize">18sp</item>
        <item name="font">roboto_bd_cd</item>
    </style>
    
    <style name="FontText.ActionBarOverflow">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@drawable/st_ic_actionbar_overflow</item>
        <item name="android:textSize">20sp</item>
        <item name="font">roboto_rg</item>
    </style>

    <style name="FontText.Subtitle">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/gray_40</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_subtitle_underline</item>
        <item name="font">roboto_bd</item>
    </style>

    <style name="FontText.Spinner">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="font">roboto_rg</item>
    </style>

    <style name="FontText.Spinner.Dropdown">
        <item name="android:textColor">@color/gray_80</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="FontText.Table">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="font">roboto_rg</item>
    </style>

    <style name="FontText.Table.Key">
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="FontText.Table.Key.Bold">
        <item name="font">roboto_bd</item>
    </style>

    <style name="FontText.Table.Value">
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="FontText.CalHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="font">roboto_bd</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FontText.ActionBarTitle">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="font">roboto_th</item>
    </style>

    <!-- FONT EDIT -->
    <style name="FontEdit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">?fontEditBackground</item>
    </style>

    <!-- FONT AUTO COMPLETE -->
    <style name="FontAutoComplete" parent="FontEdit"></style>

    <!-- FONT BUTTON -->
    <style name="FontButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontButton.Dialog">
        <item name="android:background">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="font">roboto_rg</item>
    </style>

    <style name="FontButton.Dialog.HoloDark">
        <item name="android:textColor">@color/gray_80</item>
    </style>

    <style name="FontButton.Dialog.HoloLight">
        <item name="android:textColor">@color/gray_40</item>
    </style>

    <!-- ICON VIEW -->
    <style name="IconView"></style>

    <style name="IconView.ActionBar">
        <item name="android:layout_width">@dimen/actionbar_height</item>
        <item name="android:layout_height">@dimen/actionbar_underline_offset</item>
        <item name="android:scaleType">center</item>
        <item name="icon_colors">@drawable/st_ic_actionbar_colors</item>
        <item name="icon_shadowColors">@drawable/st_ic_actionbar_shadow_colors</item>
        <item name="icon_shadowRadius">1.0px</item>
        <item name="icon_shadowDx">0.0dp</item>
        <item name="icon_shadowDy">1.5dp</item>
    </style>
    
     <style name="IconView.ActionBar.Overflow">
        <item name="android:layout_width">@dimen/actionbar_height</item>
        <item name="android:layout_height">@dimen/actionbar_underline_offset</item>
        <item name="android:scaleType">center</item>
        <item name="icon_colors">@drawable/st_ic_actionbar_overflow</item>
    </style>

    <!-- DIALOG -->
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog.Image">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- TAB STUFF -->
    <style name="TabPortrait">
        <item name="@android:layout_width">fill_parent</item>
        <item name="@android:layout_height">fill_parent</item>
        <item name="@android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="TabPortrait.Image">
        <item name="android:scaleType">center</item>
    </style>

    <style name="TabPortrait.Text">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="font">roboto_bd</item>
        <item name="tab_textAllCaps">true</item>
    </style>

    <style name="TabButtonGroup"></style>

    <style name="TabButton"></style>

    <!-- DIVIDERS -->
    <style name="Divider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2px</item>
    </style>

    <style name="Divider.Gray">
        <item name="android:background">@color/gray_60</item>
    </style>

    <style name="Divider.Gray.1px">
        <item name="android:layout_height">1px</item>
    </style>

    <!-- TABLE -->
    <style name="TableRow">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="TableRow.Title">
        <item name="android:background">@color/gray_90</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="RadioButton.ICS" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_radio_holo_dark</item>
    </style>

    <!-- NUMBER PICKER -->
    <style name="NumberPickerInputText" parent="FontEdit">
        <item name="android:paddingTop">13sp</item>
        <item name="android:paddingBottom">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/number_picker_edit_text_green</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="NumberPickerGuideText">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="NumberPickerUpButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/numberpicker_up_btn_holo_light_green</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">18dip</item>
    </style>

    <style name="NumberPickerDownButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/numberpicker_down_btn_holo_light_green</item>
        <item name="android:paddingTop">18dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

</resources>